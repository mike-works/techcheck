{
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "esnext"
        ],
        "baseUrl": ".",
        "strict": true,
        "outFile": "dist/index.js",
        "sourceMap": true,
        "declaration": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist"
    ]
}